
<div class="body">
	<div class="container">
		<p id="notice"><%= flash[:notice] %></p>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h2>Editing Book</h2>

				<%= form_for(@book) do |f| %>

					<% if @book.errors.any? %>
						<div id="error_explanation" class="error_explanation">
							<h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
							<ul>
								<% @book.errors.full_messages.each do |message| %>
									<li><%= message %></li>
								<% end %>
							</ul>
						</div>
					<% end %>



					<div class="field">
						<label>Title</label><br>
				    	<%= f.text_field :title %>
					</div>
					<div class="field">
						<label>Opinion</label><br>
				    	<%= f.text_area :body %>
					</div>
						<div class="actions">
						<%= f.submit 'Update Book', class: "btn btn-primary" %>
					</div>
				<% end %>

				<%= link_to "Show", book_path(@book) %>
				|
				<%= link_to "Back", books_path %>
			</div>
		</div>
	</div>
</div>
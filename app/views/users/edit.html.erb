<div class="body">
	<div class="container">
		<p id="notice"><%= flash[:notice] %></p>

		<h2>User info</h2>

		<%= form_for(@user) do |f| %>

			<% if @user.errors.any? %>
				<div id="error_explanation" class="error_explanation">
					<h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>




			<label>Name</label>
			<%= f.text_field :name, autofocus: true %><br>

			<label>Image</label>
			<%= f.attachment_field :profile_image %><br>

			<label>Introduction</label>
			<%= f.text_area :introduction %><br>

			<%= f.submit "Update User" %>
		<% end %>
	</div>
</div>